{
  "name": "dbt-codespace",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "extensions": [
    "mtxr.sqltools",
    "innoverio.vscode-dbt-power-user",
    "GitHub.codespaces",
    "eamodio.gitlens"
  ],
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "sqltools.useNodeRuntime": true,
    "dbt.includeProfiles": true
  },
  "postCreateCommand": "pip install dbt-duckdb && dbt init"
}
